{
  "name": "@room9/ra-feathers-client",
  "version": "0.0.0",
  "description": "[Feathers](https://feathersjs.com/) data and authentication provider to be used with [react admin](https://github.com/marmelab/react-admin)",
  "keywords": [],
  "main": "dist/ra-feathers-client.umd.js",
  "module": "dist/ra-feathers-client.es5.js",
  "typings": "dist/types/ra-feathers-client.d.ts",
  "files": [
    "dist"
  ],
  "author": "Alexandre Guidet <alex@room9.co.nz>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/room9/ra-feathers-client.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock",
      "jest-fetch-mock",
      "./jestSetup.js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/jestSetup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "peerDependencies": {
    "@feathersjs/feathers": "^3.1.7",
    "@feathersjs/authentication-client": "^1.0.2",
    "@feathersjs/rest-client": "^1.4.1",
    "react": "^16.4.1",
    "react-admin": "^2.1.0",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@feathersjs/authentication-client": "^1.0.2",
    "@feathersjs/feathers": "^3.1.7",
    "@feathersjs/rest-client": "^1.4.1",
    "@types/feathersjs__authentication-client": "^1.0.4",
    "@types/feathersjs__feathers": "^3.0.4",
    "@types/feathersjs__rest-client": "^1.3.0",
    "@types/jest": "^22.0.0",
    "@types/node": "^10.0.3",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jest": "^22.0.2",
    "jest-fetch-mock": "^1.6.5",
    "jest-localstorage-mock": "^2.2.0",
    "lint-staged": "^7.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "react": "^16.4.1",
    "react-admin": "^2.1.0",
    "react-dom": "^16.4.1",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.58.0",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "semantic-release": "^15.0.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@types/object-diff": "0.0.0",
    "@types/winston": "^2.3.9",
    "object-diff": "0.0.4",
    "whatwg-fetch": "^2.0.4",
    "winston": "^3.0.0"
  },
  "bugs": {
    "url": "https://github.com/room9/ra-feathers-client/issues"
  },
  "homepage": "https://github.com/room9/ra-feathers-client#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
